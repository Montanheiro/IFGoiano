
public class DadosAumento {
	
	String nomeFunc, Funcao;
	double salFunc, aumento, novoSalario;
	
	public double ReceberValores(String nome, String fun, double salario){		
				
		 nomeFunc = nome;
		 Funcao = fun;
		 salFunc = salario;
		
		if (salFunc <= 600)
			aumento = 1.2;
		if (salFunc > 600 && salFunc <= 1500)
			aumento = 1.15;
		if (salFunc > 1500)
			aumento = 1.05;
		return aumento;
	}
	
	public void CalcularReajuste(){
		novoSalario = aumento * salFunc;
	}
		
}
