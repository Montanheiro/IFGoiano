public class Reajuste {
	public static void main(String[] args) {
		DadosAumento FolhaPagamento = new DadosAumento();
		
		FolhaPagamento.ReceberValores("José", "Arquiteto", 3460.00);
		FolhaPagamento.salarioNovo = FolhaPagamento.CalcularReajuste();
		System.out.println("Funcionário: " + FolhaPagamento.nomeFunc + 
							"\nFunção: " + FolhaPagamento.Funcao + 
							"\nSalário atual: " + FolhaPagamento.salFunc + 
							"\nNovo Salário: " + FolhaPagamento.salarioNovo);
		
		FolhaPagamento.ReceberValores("João", "Pedreiro", 1415.40);
		FolhaPagamento.salarioNovo = FolhaPagamento.CalcularReajuste();
		System.out.println("\nFuncionário: " + FolhaPagamento.nomeFunc + 
							"\nFunção: " + FolhaPagamento.Funcao + 
							"\nSalário atual: " + FolhaPagamento.salFunc + 
							"\nNovo Salário: " + FolhaPagamento.salarioNovo);
		
		FolhaPagamento.ReceberValores("Josué", "Servente", 550.00);
		FolhaPagamento.salarioNovo = FolhaPagamento.CalcularReajuste();
		System.out.println("\nFuncionário: " + FolhaPagamento.nomeFunc + 
							"\nFunção: " + FolhaPagamento.Funcao + 
							"\nSalário atual: " + FolhaPagamento.salFunc + 
							"\nNovo Salário: " + FolhaPagamento.salarioNovo);	
	}
}