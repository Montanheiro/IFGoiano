
public class DadosAumento {
	
	String nomeFunc, Funcao;
	float salFunc, aumento, novoSalario;
	
	public float ReceberValores(float salFunc){		
		
		if (salFunc <= 600)
			return 1.2F;
		if (salFunc > 600 && salFunc <= 1500)
			return 1.15F;
		if (salFunc > 1500)
			return 1.05F;
	}
	
	public void CalcularReajuste(){
		novoSalario = aumento * salFunc;
	}
		
}
