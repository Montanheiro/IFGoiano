import java.util.Scanner;

public class Principal {
	public static void main(String[] args) {
	
		/*digite nome aluno
		definir numalunos numbimnet
		com base em nomealuno digite nota
		calc media
		exibir ap ou rp*/
		
		int alunos = 4, bimestres = 1;
		double notaMinima = 6;
		
		Scanner input = new Scanner(System.in);
		String aluno[] = new String[alunos];
		double notas[][] = new double[alunos][bimestres];
		double media[] = new double[alunos];
		
		System.out.print("Digite a nota mínima para atingir a média: ");
		System.out.print("");
		
		for(int i = 0; i < alunos; ++i){
			System.out.println("Digite o nome do " + (i+1) + "° aluno: ");
			aluno[i] = input.next();
			for(int j = 0; j < bimestres; ++j){
				System.out.println("Digite a nota do aluno " + aluno[i] + 
						" no " + (j + 1) + "º bimestre:");
				notas[i][j] = input.nextDouble();				
			}
		}
		
		for(int i = 0; i < alunos; ++i){
			for(int j = 0; j < bimestres; ++j){
				media[i] += notas[i][j];
			}
			media[i] = media[i] / bimestres;
		}
		
		for(int i = 0; i < alunos; ++i){
			System.out.print("Aluno: " + aluno[i] + "\tMédia: " + media[i] + "\tSituação: ");
			if(media[i] >= notaMinima){
				System.out.println("Aprovado");
			}else{
				System.out.println("Reprovado");
			}
		}
	}
}
